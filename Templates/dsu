
struct dsu{
    
    int find (int node){
        return node == par[node] ? node : par[node] = find(par[node]);
    }

    void join(int u, int v){
        u = find(u);
        v = find(v);
        
        if(u == v) return;
        if (sz[u] > sz[v]) swap(u, v);
        par[v] = u;
        sz[u] += sz[v];
    }
};
